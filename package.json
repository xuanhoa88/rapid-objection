{
  "name": "rapid-objection",
  "version": "1.0.0",
  "description": "Multi-app database management system with migrations, seeds, and scalable app-centric architecture",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "database",
    "orm",
    "migrations",
    "seeds",
    "objectionjs",
    "knexjs"
  ],
  "author": "xuanguyen <xuan.0211@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xuanhoa88/rapid-objection"
  },
  "scripts": {
    "postinstall": "npm run build",
    "pretest": "npm run build",
    "test": "jest",
    "test:unit": "npm test -- __tests__/unit",
    "test:integration": "npm test -- __tests__/integration",
    "test:performance": "npm test -- __tests__/performance",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm test -- --coverage --ci --watchAll=false --maxWorkers=2",
    "lint": "eslint '**/*.js'",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "npm run lint -- --format junit --output-file reports/eslint-results.xml",
    "lint:staged": "lint-staged",
    "format": "prettier --write '**/*.{js,json,md}'",
    "format:check": "prettier --check '**/*.{js,json,md}'",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format",
    "benchmark": "node benchmarks/index.js",
    "benchmark:ci": "npm run benchmark -- --ci",
    "build": "npm run clean && tsc",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage reports",
    "docs": "jsdoc -c jsdoc.config.json",
    "prepare": "husky install",
    "prepack": "npm run clean && npm run test:ci && npm run quality"
  },
  "dependencies": {
    "knex": "3.1.0",
    "objection": "3.1.4"
  },
  "devDependencies": {
    "@babel/core": "7.28.3",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-private-methods": "7.18.6",
    "@babel/preset-env": "7.28.3",
    "@jest/globals": "28.1.3",
    "@types/node": "16.11.7",
    "babel-jest": "28.1.3",
    "benchmark": "2.1.4",
    "chalk": "4.1.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-security": "2.1.1",
    "eslint-plugin-sonarjs": "0.25.1",
    "husky": "8.0.3",
    "jest": "28.1.3",
    "jest-environment-node": "28.1.3",
    "jest-extended": "4.0.2",
    "jest-html-reporters": "3.1.7",
    "jest-junit": "16.0.0",
    "jsdoc": "4.0.2",
    "lint-staged": "13.3.0",
    "prettier": "3.2.5",
    "rimraf": "4.3.1",
    "sqlite3": "5.1.7",
    "typescript": "4.9.5"
  },
  "overrides": {
    "lint-staged": {
      "micromatch": "4.0.8"
    }
  }
}
